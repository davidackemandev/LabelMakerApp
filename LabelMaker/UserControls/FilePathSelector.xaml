<UserControl x:Class="LabelMaker.UserControls.FilePathSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LabelMaker.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <DockPanel>
        <Button Click="BrowseButton_Click" DockPanel.Dock="Right" Content="..." Padding="5" Margin="5 0 0 0" />
        <TextBox x:Name="SelectedPathTxtBox" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" TextChanged="SelectedPathTxtBox_TextChanged" />
    </DockPanel>
</UserControl>
